model Attendee {
  id Int @id @default(autoincrement())
  //user User @relation(fields: [userId], references: [id])
  //userId Int @unique
  name String
  picture String
  keywords Keyword[]
  societies Society[]
}

model Society {
  id Int @id @default(autoincrement())
  //user User @relation(fields: [userId], references: [id])
  //userId Int @unique
  name String @unique
  picture String
  events Event[]
  members Attendee[]
  discordId String @unique
}

model Event {
  id Int @id @default(autoincrement())
  banner String
  name String
  startDateTime DateTime
  endDateTime DateTime
  location String
  description String
  societies Society[]
  keywords Keyword[]
}

model Keyword {
  id Int @id @default(autoincrement())
  text String @unique
  attendees Attendee[]
  events Event[]
}